@model Advertisments.Models.Ads

@{
    ViewData["Title"] = "EditAd";
}

<h1>EditAd</h1>

<h4>Ads ID: @Model.Id</h4>
@if (Model.SubscriberId != null)
{
    <p>Your subscriber ID: @Model.SubscriberId</p>
}
@if (Model.AdvertiserId != null)
{
    <p>Your Company ID: @Model.AdvertiserId</p>
}
<p></p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.AdvertiserId)
            @Html.HiddenFor(m => m.SubscriberId)
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price_Product_String" class="control-label"></label>
                <input asp-for="Price_Product_String" class="form-control" />
                <span asp-validation-for="Price_Product_String" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceAd" class="control-label"></label>
                <input asp-for="PriceAd" class="form-control" />
                <span asp-validation-for="PriceAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAds">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
